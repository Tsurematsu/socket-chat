---
import Avatar from './Avatar.astro'
import Button from './Button.astro'

interface Props {
  action: string
  method: 'GET' | 'POST' | 'PUT' | 'DELETE'
  cta: string
  label2: string
  cta2?: string
  button?: boolean
  types?: 'password' | 'text' | 'email' | 'number' | 'tel'
  data?: {
    src: string
    alt: string
  }
  className?: string
  isButton?: boolean
}

const {
  action,
  method,
  cta,
  cta2,
  button,
  data,
  types,
  isButton,
  className,
  label2,
} = Astro.props as Props
---

<div
  class="flex flex-col gap-8 items-center rounded-lg bg-gray-900/50 w-96 px-8 py-8 backdrop-blur-md border border-gray-700"
>
  <Avatar mod={true} data={data} />
  <form
    action={action}
    method={method}
    class="flex flex-col item-center justify-center gap-6"
  >
    <div class="">
      <label for="Username" class="text-sm font-medium text-gray-400">
        Username
      </label>

      <input
        type="text"
        id="Username"
        name="username"
        class="mt-1 w-full p-2 rounded-md border-primary bg-gray-300 text-sm text-gray-800 shadow-sm"
      />
    </div>
    <div class="col-span-6 sm:col-span-3">
      <label for="Password" class="block text-sm font-medium text-gray-400">
        {label2}
      </label>

      <input
        type={types}
        id="Password"
        name="password"
        class="mt-1 w-full p-2 rounded-md border-gray-200 bg-gray-300 text-sm text-gray-800 shadow-sm"
      />
    </div>

    <div
      class:list={['sm:flex sm:items-center sm:gap-4', isButton && className]}
    >
      <Button label={cta} />

      {button && <Button label={cta2} className={className} />}
    </div>
  </form>
</div>
