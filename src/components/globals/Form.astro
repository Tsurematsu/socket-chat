---
import Avatar from './Avatar.astro'

interface Props {
    action: string
    method: 'GET' | 'POST' | 'PUT' | 'DELETE'
    cta: string
    button?: boolean
    data?: {
        src: string
        alt: string
    }
}

const { action, method, cta, button, data } = Astro.props
---

<div
    class="flex flex-col gap-8 items-center rounded-lg bg-gray-900/50 w-80 px-8 py-8 backdrop-blur-md border border-gray-700"
>
    <Avatar mod={true} data={data} />
    <form
        action={action}
        method={method}
        class="flex flex-col item-center justify-center gap-6"
    >
        <div class="">
            <label for="Username" class="text-sm font-medium text-gray-400">
                Username
            </label>

            <input
                type="text"
                id="Username"
                name="username"
                class="mt-1 w-full p-2 rounded-md border-primary bg-gray-300 text-sm text-gray-800 shadow-sm"
            />
        </div>
        <div class="col-span-6 sm:col-span-3">
            <label
                for="Password"
                class="block text-sm font-medium text-gray-400"
            >
                Date of birth
            </label>

            <input
                type="date"
                id="Password"
                name="password"
                class="mt-1 w-full p-2 rounded-md border-gray-200 bg-gray-300 text-sm text-gray-800 shadow-sm"
            />
        </div>

        <div class="self-center sm:flex sm:items-center sm:gap-4">
            <button
                class="inline-block rounded-md border border-primary bg-primary px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-bg_color-light focus:outline-none focus:ring active:text-accent"
            >
                {cta}
            </button>
            {
                button && (
                    <a
                        href="/signIn"
                        class="inline-block shrink-0 rounded-md border border-primary bg-blue-600 px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring active:text-blue-500"
                    >
                        Sign In
                    </a>
                )
            }
        </div>
    </form>
</div>
